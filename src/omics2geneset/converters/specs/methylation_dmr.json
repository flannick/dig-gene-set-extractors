{
  "name": "methylation_dmr",
  "description": "DMR-level methylation effects to gene weights",
  "inputs": [{"name": "dmr_tsv", "type": "tsv"}],
  "parameters": [
    {"name": "score_column", "type": "string", "default": "delta_methylation"},
    {"name": "score_transform", "type": "string", "default": "abs"},
    {"name": "normalize", "type": "string", "default": "l1"}
  ],
  "outputs": ["geneset.tsv", "geneset.meta.json"]
}
