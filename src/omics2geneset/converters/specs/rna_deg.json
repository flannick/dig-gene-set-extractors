{
  "name": "rna_deg",
  "description": "Bulk RNA-seq differential expression table converted to gene weights",
  "inputs": [
    {"name": "deg_tsv", "type": "tsv", "description": "Table with gene IDs and differential expression score", "required": true}
  ],
  "parameters": [
    {"name": "gene_id_column", "type": "string", "default": "gene_id", "help": "Column containing gene identifiers"},
    {"name": "score_column", "type": "string", "default": "log2fc", "help": "Column containing differential expression score"},
    {"name": "score_transform", "type": "string", "default": "signed", "enum": ["signed", "abs", "positive", "negative"], "help": "Transform applied to score values"},
    {"name": "normalize", "type": "string", "default": "l1", "enum": ["l1", "none"], "help": "Final gene-weight normalization"}
  ],
  "outputs": [
    {"name": "geneset.tsv", "description": "Gene-weight table"},
    {"name": "geneset.meta.json", "description": "Run metadata and provenance"}
  ]
}
